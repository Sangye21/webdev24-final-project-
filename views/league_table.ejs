<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= leagueName %> - Standings</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Link to styles.css -->
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <div class="navbar-brand">
                <a href="/" class="navbar-logo">
                    <img src="/images/logo.png" alt="Logo" class="logo">
                </a>
            </div>
        </div>
    </nav>

    <h1><%= leagueName %> - Standings</h1> <!-- Heading displaying the competition name and "Standings" -->
    <table>
        <thead>
            <tr>
                <th>#</th> <!-- Column for team position -->
                <th>Team</th> <!-- Column for team name and crest -->
                <th>Played</th> <!-- Column for games played -->
                <th>Won</th> <!-- Column for games won -->
                <th>Drawn</th> <!-- Column for games drawn -->
                <th>Lost</th> <!-- Column for games lost -->
                <th>Points</th> <!-- Column for points -->
                <th>Goal Difference</th> <!-- Column for goal difference -->
            </tr>
        </thead>
        <tbody>
            <!-- Loop through each team in the standings and create a row for it -->
            <% standings.forEach(team => { %>
                <tr>
                    <td><%= team.position %></td>
                    <td>
                        <img src="<%= team.team.crest %>" alt="<%= team.team.name %> Crest" class="team-crest">
                        <%= team.team.name %>
                    </td>
                    <td><%= team.playedGames %></td>
                    <td><%= team.won %></td>
                    <td><%= team.draw %></td>
                    <td><%= team.lost %></td>
                    <td><%= team.points %></td>
                    <td><%= team.goalDifference %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <!-- Link to go back to the homepage -->
    <a href="/">Back to Homepage</a>
</body>
</html>
